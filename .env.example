# Contact Information Configuration
# These environment variables allow customization of contact details
# Copy this file to .env.local and update with your information

# Email address for contact form and mailto links
CONTACT_EMAIL=frank@palmisano.io

# Phone number (raw format for tel: links, formatted for display)
CONTACT_PHONE_RAW=+16233005532
CONTACT_PHONE_FORMATTED=(623) 300-5532

# LinkedIn profile information
CONTACT_LINKEDIN_URL=https://www.linkedin.com/in/frank-palmisano
CONTACT_LINKEDIN_DISPLAY=www.linkedin.com/in/frank-palmisano

# Analytics Configuration
# Choose your analytics provider: 'ga4', 'plausible', 'custom', or 'none'
ANALYTICS_PROVIDER=none

# Google Analytics 4 Configuration
# Get your Measurement ID from Google Analytics (format: G-XXXXXXXXXX)
GA4_MEASUREMENT_ID=
# Optional: Custom GA4 configuration as JSON
GA4_CONFIG_OPTIONS={"send_page_view": true, "allow_google_signals": false}

# Plausible Analytics Configuration
# Your website domain as registered in Plausible
PLAUSIBLE_DOMAIN=
# Optional: Custom Plausible script URL (default: https://plausible.io/js/script.js)
PLAUSIBLE_SRC=https://plausible.io/js/script.js
# Optional: Plausible configuration options as JSON
PLAUSIBLE_OPTIONS={}

# Custom/Self-hosted Analytics Configuration
# URL to your custom analytics script
CUSTOM_ANALYTICS_SRC=
# Optional: Configuration object passed to your custom analytics
CUSTOM_ANALYTICS_CONFIG={}

# Privacy and Compliance Settings
# Require user consent before loading analytics (GDPR compliance)
ANALYTICS_CONSENT_REQUIRED=true
# Anonymize IP addresses in analytics
ANALYTICS_ANONYMIZE_IP=true
# Use cookie-less tracking when possible
ANALYTICS_COOKIE_LESS=false

# Feature Toggles
# Track Core Web Vitals and performance metrics
ANALYTICS_TRACK_PERFORMANCE=true
# Track JavaScript errors and unhandled promise rejections
ANALYTICS_TRACK_ERRORS=true
# Enable debug mode and analytics panel (automatically enabled in development)
ANALYTICS_DEBUG=false