---
import { Card, CardContent, CardDescription, CardHeader, CardTitle } from '@/components/ui/card';
import { Badge } from '@/components/ui/badge';
import { RESUME_DATA } from '@/config/resume-data';
---

<section class="container mx-auto px-4 py-16" id="experience">
  <div class="max-w-6xl mx-auto space-y-12">
    <div class="text-center space-y-4">
      <Badge variant="outline" className="text-sm"> Experience </Badge>
      <h2 class="text-3xl md:text-4xl font-bold">Professional Journey</h2>
      <p class="text-lg text-muted-foreground max-w-3xl mx-auto">
        From aerospace validation supporting NASA programs to software development and technical
        leadership.
      </p>
    </div>

    <div class="flex flex-col gap-6">
      {
        RESUME_DATA.experience.map((exp) => (
          <Card
            className="hover:shadow-lg transition-all duration-200 dark:border-muted dark:hover:border-primary/20 dark:hover:shadow-xl dark:hover:shadow-primary/5"
            client:load
          >
            <CardHeader>
              <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
                <div>
                  <CardTitle className="text-xl">{exp.position}</CardTitle>
                  <CardDescription className="text-base mt-1">
                    {exp.company} • {exp.location}
                  </CardDescription>
                </div>
                <Badge variant="secondary" className="w-fit">
                  {exp.startDate} - {exp.endDate}
                </Badge>
              </div>
            </CardHeader>
            <CardContent className="space-y-4">
              <p class="text-muted-foreground">{exp.description}</p>
              <ul class="space-y-2">
                {exp.achievements.map((achievement) => (
                  <li class="flex items-start">
                    <span class="text-primary mr-2 mt-1">•</span>
                    <span class="text-muted-foreground text-sm">{achievement}</span>
                  </li>
                ))}
              </ul>
              <div class="flex flex-wrap gap-2 pt-2">
                {exp.technologies.map((tech) => (
                  <Badge variant="outline" className="text-xs">
                    {tech}
                  </Badge>
                ))}
              </div>
            </CardContent>
          </Card>
        ))
      }
    </div>
  </div>
</section>
