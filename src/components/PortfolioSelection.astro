---
import { Card, CardContent, CardDescription, CardHeader, CardTitle } from "@/components/ui/card";
import { Badge } from "@/components/ui/badge";
import { Button } from "@/components/ui/button";
import { Code2, Users } from "lucide-react";
---

<section class="container mx-auto px-4 py-16 animate-fade-in-up">
	<div class="max-w-6xl mx-auto space-y-12">
		<div class="text-center space-y-4">
			<Badge variant="secondary" className="text-lg px-4 py-1">
				Choose Your Journey
			</Badge>
			<h1 class="text-4xl md:text-5xl font-bold tracking-tight bg-gradient-to-r from-foreground to-foreground/80 bg-clip-text text-transparent">
				Welcome to My Portfolio
			</h1>
			<p class="text-xl text-muted-foreground max-w-3xl mx-auto">
				I'm Frank Palmisano, a versatile professional with expertise spanning software engineering and customer service excellence. 
				Select below to explore my journey in your area of interest.
			</p>
		</div>

		<div class="grid md:grid-cols-2 gap-8">
			<a href="/software-engineer" class="block">
				<Card className="group hover:shadow-xl transition-all duration-300 border-2 hover:border-primary/50 dark:border-muted dark:hover:border-primary/30 dark:hover:shadow-2xl dark:hover:shadow-primary/10 cursor-pointer h-full hover:scale-[1.02] bg-card/50 backdrop-blur-sm" client:load>
					<CardHeader className="space-y-4">
						<div class="w-16 h-16 rounded-lg bg-gradient-to-br from-blue-500/20 to-blue-600/10 flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
							<Code2 className="w-8 h-8 text-blue-500 group-hover:text-blue-400 transition-colors" />
						</div>
						<div>
							<CardTitle className="text-2xl">Software Engineer</CardTitle>
							<CardDescription className="text-base mt-2">
								Explore my technical journey
							</CardDescription>
						</div>
					</CardHeader>
					<CardContent className="space-y-6">
						<div class="space-y-3">
							<div class="flex items-center space-x-2">
								<div class="w-2 h-2 bg-blue-500 rounded-full"></div>
								<span class="text-sm">NASA Orion Spacecraft Contributor</span>
							</div>
							<div class="flex items-center space-x-2">
								<div class="w-2 h-2 bg-blue-500 rounded-full"></div>
								<span class="text-sm">Embedded Systems & Virtualization Expert</span>
							</div>
							<div class="flex items-center space-x-2">
								<div class="w-2 h-2 bg-blue-500 rounded-full"></div>
								<span class="text-sm">$2.4M Cost Savings Through Innovation</span>
							</div>
						</div>
						<div class="flex flex-wrap gap-2">
							<Badge variant="secondary">Python</Badge>
							<Badge variant="secondary">C++</Badge>
							<Badge variant="secondary">TypeScript</Badge>
							<Badge variant="secondary">Embedded Systems</Badge>
						</div>
						<div class="w-full">
							<Button className="w-full group-hover:bg-primary group-hover:text-primary-foreground transition-all duration-300 group-hover:shadow-md" variant="outline" size="lg">
								View Technical Portfolio →
							</Button>
						</div>
					</CardContent>
				</Card>
			</a>

			<a href="/customer-service" class="block">
				<Card className="group hover:shadow-xl transition-all duration-300 border-2 hover:border-primary/50 dark:border-muted dark:hover:border-primary/30 dark:hover:shadow-2xl dark:hover:shadow-primary/10 cursor-pointer h-full hover:scale-[1.02] bg-card/50 backdrop-blur-sm" client:load>
					<CardHeader className="space-y-4">
						<div class="w-16 h-16 rounded-lg bg-gradient-to-br from-green-500/20 to-green-600/10 flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
							<Users className="w-8 h-8 text-green-500 group-hover:text-green-400 transition-colors" />
						</div>
						<div>
							<CardTitle className="text-2xl">Customer Service Representative</CardTitle>
							<CardDescription className="text-base mt-2">
								Discover my service excellence
							</CardDescription>
						</div>
					</CardHeader>
					<CardContent className="space-y-6">
						<div class="space-y-3">
							<div class="flex items-center space-x-2">
								<div class="w-2 h-2 bg-green-500 rounded-full"></div>
								<span class="text-sm">99% Customer Satisfaction Rating</span>
							</div>
							<div class="flex items-center space-x-2">
								<div class="w-2 h-2 bg-green-500 rounded-full"></div>
								<span class="text-sm">Apple's Top 4% Nationally</span>
							</div>
							<div class="flex items-center space-x-2">
								<div class="w-2 h-2 bg-green-500 rounded-full"></div>
								<span class="text-sm">16 Outstanding Service Awards</span>
							</div>
						</div>
						<div class="flex flex-wrap gap-2">
							<Badge variant="secondary">HIPAA Certified</Badge>
							<Badge variant="secondary">Salesforce</Badge>
							<Badge variant="secondary">Zendesk</Badge>
							<Badge variant="secondary">First-Contact Resolution</Badge>
						</div>
						<div class="w-full">
							<Button className="w-full group-hover:bg-primary group-hover:text-primary-foreground transition-all duration-300 group-hover:shadow-md" variant="outline" size="lg">
								View Service Portfolio →
							</Button>
						</div>
					</CardContent>
				</Card>
			</a>
		</div>

		<div class="text-center">
			<p class="text-muted-foreground mb-4">Not sure which to explore?</p>
			<Button variant="outline" size="lg" asChild>
				<a href="#about">Learn More About Me ↓</a>
			</Button>
		</div>
	</div>
</section>