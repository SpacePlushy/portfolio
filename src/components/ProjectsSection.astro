---
import { Card, CardContent, CardDescription, CardHeader, CardTitle } from '@/components/ui/card';
import { Badge } from '@/components/ui/badge';
import { RESUME_DATA } from '@/config/resume-data';
---

<section class="container mx-auto px-4 py-16" id="projects">
  <div class="max-w-6xl mx-auto space-y-12">
    <div class="text-center space-y-4">
      <Badge variant="outline" className="text-sm"> Projects </Badge>
      <h2 class="text-3xl md:text-4xl font-bold">Featured Projects</h2>
      <p class="text-lg text-muted-foreground max-w-3xl mx-auto">
        Key projects demonstrating validation engineering, automation, and full-stack development
        capabilities.
      </p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      {
        RESUME_DATA.projects.map((project, index) => (
          <Card
            key={index}
            className="hover:shadow-lg transition-all duration-200 dark:border-muted dark:hover:border-primary/20 dark:hover:shadow-xl dark:hover:shadow-primary/5"
            client:load
          >
            <CardHeader className="space-y-3">
              <div class="flex items-start justify-between gap-2">
                <CardTitle className="text-lg leading-tight">{project.name}</CardTitle>
              </div>
              <Badge variant="secondary" className="w-fit text-xs">
                {project.context}
              </Badge>
            </CardHeader>
            <CardContent className="space-y-4">
              <CardDescription className="text-base">{project.description}</CardDescription>

              <div class="space-y-3">
                <div>
                  <h4 class="text-sm font-semibold mb-2">Key Highlights:</h4>
                  <ul class="space-y-1 text-sm text-muted-foreground">
                    {project.highlights.map((highlight) => (
                      <li class="flex gap-2">
                        <span class="text-primary flex-shrink-0">â€¢</span>
                        <span class="flex-1">{highlight}</span>
                      </li>
                    ))}
                  </ul>
                </div>

                <div>
                  <h4 class="text-sm font-semibold mb-2">Technologies:</h4>
                  <div class="flex flex-wrap gap-2">
                    {project.technologies.map((tech) => (
                      <Badge variant="outline" className="text-xs">
                        {tech}
                      </Badge>
                    ))}
                  </div>
                </div>
              </div>
            </CardContent>
          </Card>
        ))
      }
    </div>
  </div>
</section>
