---
import { Card, CardContent, CardDescription, CardHeader, CardTitle } from "@/components/ui/card";
import { Badge } from "@/components/ui/badge";

const features = [
  {
    icon: "üöÄ",
    title: "Lightning Fast",
    description: "Get instant AI assistance without leaving your terminal. Claude Code integrates seamlessly with your existing workflow.",
    badges: ["CLI", "Integration"]
  },
  {
    icon: "üß†",
    title: "Intelligent Code Analysis",
    description: "Advanced reasoning capabilities help you understand, debug, and optimize your code with contextual insights.",
    badges: ["AI", "Analysis"]
  },
  {
    icon: "üîß",
    title: "Multi-Language Support",
    description: "Works with Python, JavaScript, TypeScript, Rust, Go, and many more programming languages out of the box.",
    badges: ["Languages", "Universal"]
  },
  {
    icon: "üõ°Ô∏è",
    title: "Privacy Focused",
    description: "Your code stays secure with Anthropic's privacy-first approach. No training on your data without explicit consent.",
    badges: ["Privacy", "Secure"]
  },
  {
    icon: "‚ö°",
    title: "Real-time Collaboration",
    description: "Get suggestions, reviews, and improvements as you type. Like having an AI pair programmer always available.",
    badges: ["Real-time", "Collaboration"]
  },
  {
    icon: "üìö",
    title: "Extensive Documentation",
    description: "Comprehensive guides, examples, and best practices to help you get the most out of Claude Code.",
    badges: ["Docs", "Learning"]
  }
];
---

<section class="container mx-auto px-4 py-16 lg:py-24">
	<div class="text-center space-y-4 mb-16">
		<Badge variant="outline" className="w-fit mx-auto">
			‚ú® Features
		</Badge>
		<h2 class="text-3xl lg:text-5xl font-bold tracking-tight">
			Why Choose Claude Code?
		</h2>
		<p class="text-xl text-muted-foreground max-w-2xl mx-auto">
			Built for developers who want AI assistance without compromising on control, 
			privacy, or performance.
		</p>
	</div>

	<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
		{features.map((feature, index) => (
			<Card className="border border-border/50 hover:border-border transition-all duration-200 group" client:load>
				<CardHeader className="space-y-4">
					<div class="text-4xl">{feature.icon}</div>
					<div class="space-y-2">
						<CardTitle className="text-xl group-hover:text-primary transition-all duration-200">
							{feature.title}
						</CardTitle>
						<div class="flex flex-wrap gap-1">
							{feature.badges.map((badge, badgeIndex) => (
								<Badge key={badgeIndex} variant="secondary" className="text-xs">
									{badge}
								</Badge>
							))}
						</div>
					</div>
				</CardHeader>
				<CardContent>
					<CardDescription className="text-base leading-relaxed">
						{feature.description}
					</CardDescription>
				</CardContent>
			</Card>
		))}
	</div>

	<!-- Stats Section -->
	<div class="mt-16 pt-16 border-t border-border/50">
		<div class="grid grid-cols-2 md:grid-cols-4 gap-8 text-center">
			<div class="space-y-2">
				<div class="text-3xl font-bold text-primary">50K+</div>
				<div class="text-sm text-muted-foreground">Active Developers</div>
			</div>
			<div class="space-y-2">
				<div class="text-3xl font-bold text-primary">1M+</div>
				<div class="text-sm text-muted-foreground">Code Generations</div>
			</div>
			<div class="space-y-2">
				<div class="text-3xl font-bold text-primary">20+</div>
				<div class="text-sm text-muted-foreground">Languages Supported</div>
			</div>
			<div class="space-y-2">
				<div class="text-3xl font-bold text-primary">99.9%</div>
				<div class="text-sm text-muted-foreground">Uptime</div>
			</div>
		</div>
	</div>
</section>