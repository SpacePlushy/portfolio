---
import { Card, CardContent } from '@/components/ui/card';
import { Badge } from '@/components/ui/badge';
import { RESUME_DATA } from '@/config/resume-data';
---

<section class="container mx-auto px-4 py-16" id="about">
  <div class="max-w-6xl mx-auto space-y-12">
    <div class="text-center space-y-4">
      <Badge variant="outline" className="text-sm"> About Me </Badge>
      <h2 class="text-3xl md:text-4xl font-bold">Validation & QA Expertise</h2>
    </div>

    <div class="grid lg:grid-cols-3 gap-8">
      <div class="lg:col-span-2 space-y-6">
        <p class="text-lg text-muted-foreground leading-relaxed">
          {RESUME_DATA.about.summary}
        </p>
      </div>

      <div class="space-y-4">
        <Card
          className="hover:shadow-lg transition-all duration-200 dark:border-muted dark:hover:border-primary/20 dark:hover:shadow-xl dark:hover:shadow-primary/5"
          client:load
        >
          <CardContent className="p-6 space-y-4">
            <h3 class="font-semibold text-lg">Quick Stats</h3>
            <div class="space-y-3">
              <div class="flex justify-between items-center">
                <span class="text-muted-foreground">Experience</span>
                <span class="font-medium">6 Years</span>
              </div>
              <div class="flex justify-between items-center">
                <span class="text-muted-foreground">Company</span>
                <span class="font-medium">Honeywell Aerospace</span>
              </div>
              <div class="flex justify-between items-center">
                <span class="text-muted-foreground">Programs</span>
                <span class="font-medium">NASA ISS/Orion</span>
              </div>
              <div class="flex justify-between items-center">
                <span class="text-muted-foreground">Education</span>
                <span class="font-medium">BS in Computer Science, ASU</span>
              </div>
              <div class="flex justify-between items-center">
                <span class="text-muted-foreground">Skills</span>
                <span class="font-medium">Python/Linux</span>
              </div>
            </div>
          </CardContent>
        </Card>
      </div>
    </div>

    <div class="space-y-4">
      <h3 class="text-2xl font-bold text-center">Key Highlights</h3>
      <div class="grid md:grid-cols-2 gap-4">
        {
          RESUME_DATA.about.highlights.map((highlight) => (
            <Card
              className="hover:shadow-lg transition-all duration-200 dark:border-muted dark:hover:border-primary/20 dark:hover:shadow-xl dark:hover:shadow-primary/5"
              client:load
            >
              <CardContent className="p-6">
                <div class="flex items-start gap-3">
                  <div class="text-primary mt-1">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="20"
                      height="20"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                    >
                      <polyline points="20 6 9 17 4 12" />
                    </svg>
                  </div>
                  <p class="text-muted-foreground leading-relaxed">{highlight}</p>
                </div>
              </CardContent>
            </Card>
          ))
        }
      </div>
    </div>
  </div>
</section>
