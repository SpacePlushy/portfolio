---
import { Button } from '@/components/ui/button';
import { Badge } from '@/components/ui/badge';
import ProfileImage from './ProfileImage.astro';
import { RESUME_DATA } from '@/config/resume-data';
---

<section class="container mx-auto px-4 py-12 lg:py-16" id="hero">
  <div class="max-w-6xl mx-auto">
    <div class="text-center space-y-8">
      <ProfileImage className="w-32 h-32 mx-auto mb-6 ring-4 ring-primary/20" priority={true} />
      <div class="space-y-4">
        <Badge variant="secondary" className="text-lg px-4 py-1"> Welcome to My Portfolio </Badge>
        <h1 class="text-4xl lg:text-7xl font-bold tracking-tight">
          {RESUME_DATA.personal.name}
        </h1>
        <p class="text-2xl lg:text-3xl text-muted-foreground font-light">
          {RESUME_DATA.personal.title}
        </p>
      </div>

      <div class="max-w-3xl mx-auto">
        <p class="text-lg text-muted-foreground leading-relaxed">
          {RESUME_DATA.personal.tagline}
        </p>
      </div>

      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <Button size="lg" className="text-lg px-8" variant="default" asChild client:load>
          <a href="#contact"> Get In Touch </a>
        </Button>
      </div>

      <div class="flex flex-wrap items-center justify-center gap-8 text-sm">
        <div class="flex items-center space-x-2">
          <div class="w-2 h-2 bg-blue-500 rounded-full"></div>
          <span>6 Years Linux Infrastructure</span>
        </div>
        <div class="flex items-center space-x-2">
          <div class="w-2 h-2 bg-green-500 rounded-full"></div>
          <span>Python/Bash Automation</span>
        </div>
        <div class="flex items-center space-x-2">
          <div class="w-2 h-2 bg-purple-500 rounded-full"></div>
          <span>99%+ System Uptime</span>
        </div>
      </div>
    </div>
  </div>
</section>
