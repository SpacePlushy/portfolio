---
import Layout from '../layouts/Layout.astro';
import ContactForm from '../components/ContactForm.astro';
import { Card, CardContent, CardDescription, CardHeader, CardTitle } from "@/components/ui/card";
import { Badge } from "@/components/ui/badge";
---

<Layout>
	<main class="min-h-screen py-20">
		<div class="container mx-auto px-4 max-w-4xl">
			<div class="text-center space-y-4 mb-12">
				<Badge variant="outline" className="text-sm">
					BotID Demo
				</Badge>
				<h1 class="text-4xl font-bold">Contact Form with Bot Protection</h1>
				<p class="text-lg text-muted-foreground max-w-2xl mx-auto">
					This demo shows how BotID protects the contact form from automated bots.
					Try submitting the form to see it in action!
				</p>
			</div>

			<div class="grid md:grid-cols-2 gap-8">
				<ContactForm />
				
				<div class="space-y-6">
					<Card client:load>
						<CardHeader>
							<CardTitle>How BotID Works</CardTitle>
							<CardDescription>Invisible protection for your forms</CardDescription>
						</CardHeader>
						<CardContent className="space-y-4">
							<div class="space-y-2">
								<h4 class="font-semibold">üõ°Ô∏è Client-Side Protection</h4>
								<p class="text-sm text-muted-foreground">
									BotID runs invisible checks in the browser to verify human behavior
								</p>
							</div>
							
							<div class="space-y-2">
								<h4 class="font-semibold">üîí Server-Side Validation</h4>
								<p class="text-sm text-muted-foreground">
									The middleware checks every API request to block automated bots
								</p>
							</div>
							
							<div class="space-y-2">
								<h4 class="font-semibold">‚úÖ Zero Friction</h4>
								<p class="text-sm text-muted-foreground">
									Real users won't notice anything - no CAPTCHAs or challenges
								</p>
							</div>
						</CardContent>
					</Card>

					<Card client:load>
						<CardHeader>
							<CardTitle>Protection Status</CardTitle>
							<CardDescription>Current BotID configuration</CardDescription>
						</CardHeader>
						<CardContent className="space-y-2">
							<div class="flex items-center justify-between">
								<span class="text-sm">Client Protection</span>
								<Badge variant="default" className="text-xs">Active</Badge>
							</div>
							<div class="flex items-center justify-between">
								<span class="text-sm">API Protection</span>
								<Badge variant="default" className="text-xs">Active</Badge>
							</div>
							<div class="flex items-center justify-between">
								<span class="text-sm">Mode</span>
								<Badge variant="outline" className="text-xs">Basic</Badge>
							</div>
						</CardContent>
					</Card>
				</div>
			</div>
		</div>
	</main>
</Layout>